//И я жду появления процесса ОС "ИмяПроцесса" в течение 10 секунд
//@ЯЖдуПоявленияПроцессаОСВТечениеСекунд(Парам01,Парам02)
Функция ЯЖдуПоявленияПроцессаОСВТечениеСекунд(ИмяПроцесса, КолСекунд) Экспорт
	
	Если НЕ Ванесса.Объект.ИспользоватьКомпонентуVanessaExt Тогда
		ВызватьИсключение Ванесса.Локализовать("Необходимо включить использование внешней компоненты VanessaExt.");
	КонецЕсли;
	
	Ванесса.ЗапретитьВыполнениеШагов();
	
	ДатаНачалаВыполненияОбработчикаОжидания = ТекущаяДата();
	КолСекундОбработчикаОжидания = КолСекунд;
	ИмяПроцессаОбработчикаОжидания = ИмяПроцесса;
	
	ПодключитьОбработчикОжидания("ЯЖдуПоявленияПроцессаОСВТечениеСекундОбработчик", 0.1, Истина);
	
КонецФункции

&НаКлиенте
Процедура ЯЖдуПоявленияПроцессаОСВТечениеСекундОбработчик()
	
	ИмяОбработчика = "ЯЖдуПоявленияПроцессаОСВТечениеСекундОбработчик";
	
	Если ТекущаяДата() > (ДатаНачалаВыполненияОбработчикаОжидания + КолСекундОбработчикаОжидания) Тогда
		ОтключитьОбработчикОжидания(ИмяОбработчика);
		ТекстСообщения = "Ожидали, что появится процесс с <%1> в течение <%2> секунд.";
		ТекстСообщения = СтрЗаменить(ТекстСообщения,"%1",ИмяПроцессаОбработчикаОжидания);
		ТекстСообщения = СтрЗаменить(ТекстСообщения,"%2",КолСекундОбработчикаОжидания);
		Ванесса.ПродолжитьВыполнениеШагов(Истина,ТекстСообщения);
		Возврат;
	КонецЕсли;
	
	ДополнительныеПараметры = Новый Структура;
	ДополнительныеПараметры.Вставить("ИмяПроцесса", ИмяПроцессаОбработчикаОжидания);
	ДополнительныеПараметры.Вставить("КолСекунд", КолСекундОбработчикаОжидания);
	ДополнительныеПараметры.Вставить("НачалоОбработки", ДатаНачалаВыполненияОбработчикаОжидания);
	ОписаниеОповещения = Новый ОписаниеОповещения("НачатьВызовПолучитьСписокПроцессовОбработчик", ЭтаФорма, ДополнительныеПараметры);
	Ванесса.ВнешняяКомпонентаДляСкриншотов.НачатьВызовПолучитьСписокПроцессов(ОписаниеОповещения, Ложь);
	
КонецПроцедуры

&НаКлиенте
Процедура НачатьВызовПолучитьСписокПроцессовОбработчик(РезультатВызова, ПараметрыВызова, ДополнительныеПараметры) Экспорт
	
	ИмяПроцесса = ДополнительныеПараметры.ИмяПроцесса;
	
	ДанныеСпискаПроцессов = Ванесса.ПрочитатьСтрокуJSON(РезультатВызова);
	
	ИдДанныеСпискаПроцессов = -1;
	Если ТипЗнч(ДанныеСпискаПроцессов) = Тип("Массив") Тогда
		НайденныеПроцессы = Новый Массив;
		Для Каждого ДанныеПроцесса Из ДанныеСпискаПроцессов Цикл
			Если НЕ ДанныеПроцесса.Свойство("CommandLine") Тогда
				Продолжить;
			КонецЕсли;
			
			Если Найти(ИмяПроцесса, "*") > 0 Тогда
				Если Ванесса.СтрокаСоответствуетШаблону(НРег(ДанныеПроцесса.CommandLine), НРег(ИмяПроцесса)) Тогда
					НайденныеПроцессы.Добавить(ДанныеПроцесса);
				КонецЕсли;	
			Иначе
				Если Найти(НРег(ДанныеПроцесса.CommandLine), НРег(ИмяПроцесса)) > 0 Тогда
					НайденныеПроцессы.Добавить(ДанныеПроцесса);
				КонецЕсли;	
			КонецЕсли;	
			
		КонецЦикла;	
		
		Если НайденныеПроцессы.Количество() > 0 Тогда
			Ванесса.ПродолжитьВыполнениеШагов();
			Возврат;
		КонецЕсли;	
		
		ПодключитьОбработчикОжидания("ЯЖдуПоявленияПроцессаОСВТечениеСекундОбработчик", 0.1, Истина);
		
	Иначе
		ТекстСообщения = "Не получилось получить список процессов";
		Ванесса.ПродолжитьВыполнениеШагов(Истина,ТекстСообщения);
	КонецЕсли;
	
КонецПроцедуры

