//И выполняю команду системы "ТекстКоманды" и сохраняю результат в переменную "ИмяПеременной"
//@ЯВыполняюКомандуСистемыИСохраняюРезультатВПеременную(Парам01,Парам02)
Функция ЯВыполняюКомандуСистемыИСохраняюРезультатВПеременную(ТекстКоманды, ИмяПеременной) Экспорт
	
	ИмяВременногоФайла = ПолучитьИмяВременногоФайла("txt");
	ТекстКоманды = ТекстКоманды + " > """ + ИмяВременногоФайла + """ 2>&1"; 
	
	Ванесса.ВыполнитьКомандуОСБезПоказаЧерногоОкна(ТекстКоманды);
	
	Если НЕ Ванесса.ФайлСуществуетКомандаСистемы(ИмяВременногоФайла) Тогда
		ТекстСообщения1 = Ванесса.ПолучитьТекстСообщенияПользователю("Не найден файл, в который был направлен вывод команды <%1>.");
		ТекстСообщения1 = СтрЗаменить(ТекстСообщения1,"%1",ИмяВременногоФайла);
		
		ТекстСообщения2 = Ванесса.ПолучитьТекстСообщенияПользователю("Полный текст команды <%1>.");
		ТекстСообщения2 = СтрЗаменить(ТекстСообщения2,"%1",ТекстКоманды);
		ВызватьИсключение ТекстСообщения1 + Символы.ПС + ТекстСообщения2;
	КонецЕсли;
	
	Текст = Новый ЧтениеТекста;
	Текст.Открыть(ИмяВременногоФайла, "UTF-8");
	ТекстФайла = СокрЛП(Текст.Прочитать());
	Текст.Закрыть();
	
	Ванесса.СохранитьЗначениеПеременнойВКонтекст(ИмяПеременной, ТекстФайла);
	
КонецФункции
